application {
  config {
    baseName shopper
    applicationType monolith
    packageName com.genhot.shopper
    authenticationType jwt
    prodDatabaseType postgresql
    serviceDiscoveryType no
    clientFramework react
    serverPort 8081
    reactive true
    nativeLanguage en
    languages [en, zh-cn]
  }

  entities Product, Category, Customer, Address, Order, Delivery
}

entity Product {
  name String required
  description String
  price BigDecimal required
  inventory Integer required
}

entity Category {
  name String required
  description String
  status CategoryStatus required
}

enum CategoryStatus {
  AVAILABLE, RESTRICTED, DISABLED
}

entity Customer {
  firstName String required
  lastName String required
  email String required
  phoneNumber String
  address String
}

entity Address {
  address1 String
  city String
  state String
  zipcode String
  country String
}

entity Order {
  date Instant required
  status String required
  totalPrice BigDecimal required
}

entity Delivery {
  trackingNumber String required
  carrier String required
  shippingDate Instant required
}

relationship ManyToMany {
  Product{category(name)} to Category{product}
}

relationship OneToMany {
  Customer{address} to Address{customer}
  Customer{order} to Order{customer}
}

relationship OneToMany {
  Order{product} to Product{order}
}

relationship OneToMany {
  Delivery{order} to Order{delivery}
}

paginate all with pagination